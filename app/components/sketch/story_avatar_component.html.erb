<%= content_tag(wrapper_tag, **wrapper_options) do %>
  <%# Ring (gradient when selected) %>
  <div class="<%= ring_classes %>">
    <%# Avatar circle %>
    <div class="<%= avatar_classes %>">
      <% if is_all? %>
        <%# All option - grid icon %>
        <svg class="w-6 h-6 text-sketch-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
        </svg>
      <% elsif has_image? %>
        <%# Image avatar %>
        <img src="<%= @src %>" alt="<%= @name %>" class="w-full h-full object-cover">
      <% else %>
        <%# Initials avatar %>
        <span class="font-sketch font-medium text-sketch-ink"><%= displayed_initials %></span>
      <% end %>
    </div>
  </div>

  <%# Name label %>
  <span class="<%= name_classes %>"><%= displayed_name %></span>
<% end %>
