<button
  type="<%= button_type %>"
  class="<%= button_classes %>"
  data-controller="sketch-button"
  data-sketch-button-roughness-value="<%= roughness_value %>"
  data-sketch-button-seed-value="<%= random_seed %>"
  data-action="mouseenter->sketch-button#onHover mouseleave->sketch-button#onLeave"
  <%= "disabled" if disabled? %>
  aria-disabled="<%= aria_disabled %>"
  aria-busy="<%= aria_busy %>"
>
  <%# SVG Border Container %>
  <span class="sketch-border absolute inset-0 pointer-events-none" data-sketch-button-target="border"></span>

  <%# Loading Spinner %>
  <% if loading? %>
    <svg class="animate-spin <%= icon_classes %>" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
  <% end %>

  <%# Left Icon %>
  <% if has_icon? && icon_left? && !loading? %>
    <%= helpers.heroicon icon_name, variant: :outline, options: { class: icon_classes } %>
  <% end %>

  <%# Button Content %>
  <span class="sketch-button-content relative z-10">
    <%= content %>
  </span>

  <%# Right Icon %>
  <% if has_icon? && !icon_left? && !loading? %>
    <%= helpers.heroicon icon_name, variant: :outline, options: { class: icon_classes } %>
  <% end %>
</button>
