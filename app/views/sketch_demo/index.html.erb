<%# Frame0 Sketch Design System Demo Page %>
<% content_for :title, @page_title %>

<div class="min-h-screen bg-sketch-paper">
  <%# Header %>
  <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b-2 border-sketch-ink/20 px-4 py-4">
    <div class="max-w-6xl mx-auto flex items-center justify-between">
      <h1 class="font-sketch text-2xl text-sketch-ink">
        âœï¸ Frame0 Sketch Design System
      </h1>
      <span class="text-sm text-sketch-gray font-hand">Development Only</span>
    </div>
  </header>

  <main class="max-w-6xl mx-auto px-4 py-8 space-y-16">

    <%# ==================== BUTTONS ==================== %>
    <section id="buttons" class="space-y-6">
      <h2 class="font-sketch text-3xl text-sketch-ink border-b-2 border-dashed border-sketch-ink/30 pb-2">
        Buttons
      </h2>

      <%# Primary Buttons %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Primary Variant</h3>
        <div class="flex flex-wrap gap-4 items-center">
          <%= render Sketch::ButtonComponent.new(variant: :primary) do %>
            Default
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :primary, size: :sm) do %>
            Small
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :primary, size: :lg) do %>
            Large
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :primary, disabled: true) do %>
            Disabled
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :primary, loading: true) do %>
            Loading
          <% end %>
        </div>
      </div>

      <%# Secondary Buttons %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Secondary Variant</h3>
        <div class="flex flex-wrap gap-4 items-center">
          <%= render Sketch::ButtonComponent.new(variant: :secondary) do %>
            Secondary
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :secondary, size: :sm) do %>
            Small
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :secondary, disabled: true) do %>
            Disabled
          <% end %>
        </div>
      </div>

      <%# Ghost Buttons %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Ghost Variant</h3>
        <div class="flex flex-wrap gap-4 items-center">
          <%= render Sketch::ButtonComponent.new(variant: :ghost) do %>
            Ghost
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :ghost, size: :lg) do %>
            Large Ghost
          <% end %>
        </div>
      </div>

      <%# Danger Buttons %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Danger Variant</h3>
        <div class="flex flex-wrap gap-4 items-center">
          <%= render Sketch::ButtonComponent.new(variant: :danger) do %>
            Delete
          <% end %>

          <%= render Sketch::ButtonComponent.new(variant: :danger, disabled: true) do %>
            Disabled
          <% end %>
        </div>
      </div>

      <%# Full Width %>
      <div class="space-y-4 max-w-md">
        <h3 class="font-hand text-xl text-sketch-gray">Full Width</h3>
        <%= render Sketch::ButtonComponent.new(variant: :primary, full_width: true) do %>
          Full Width Button
        <% end %>
      </div>
    </section>

    <%# ==================== CARDS ==================== %>
    <section id="cards" class="space-y-6">
      <h2 class="font-sketch text-3xl text-sketch-ink border-b-2 border-dashed border-sketch-ink/30 pb-2">
        Cards
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <%# Default Card %>
        <%= render Sketch::CardComponent.new(variant: :default) do |card| %>
          <% card.with_header do %>
            <h4 class="font-sketch text-lg">Default Card</h4>
          <% end %>
          <p class="text-sketch-gray font-hand">
            This is the default card style with a hand-drawn border effect.
          </p>
          <% card.with_footer do %>
            <span class="text-sm text-sketch-gray">Footer content</span>
          <% end %>
        <% end %>

        <%# Elevated Card %>
        <%= render Sketch::CardComponent.new(variant: :elevated) do |card| %>
          <% card.with_header do %>
            <h4 class="font-sketch text-lg">Elevated Card</h4>
          <% end %>
          <p class="text-sketch-gray font-hand">
            Elevated style with shadow effect for depth.
          </p>
        <% end %>

        <%# Flat Card %>
        <%= render Sketch::CardComponent.new(variant: :flat) do |card| %>
          <% card.with_header do %>
            <h4 class="font-sketch text-lg">Flat Card</h4>
          <% end %>
          <p class="text-sketch-gray font-hand">
            Minimal flat design without shadow.
          </p>
        <% end %>

        <%# Glass Card %>
        <%= render Sketch::CardComponent.new(variant: :glass) do |card| %>
          <% card.with_header do %>
            <h4 class="font-sketch text-lg">Glass Card</h4>
          <% end %>
          <p class="text-sketch-gray font-hand">
            Glassmorphism effect with blur backdrop.
          </p>
        <% end %>
      </div>

      <%# Hoverable Card %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Interactive Cards</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl">
          <%= render Sketch::CardComponent.new(variant: :default, hoverable: true) do %>
            <h4 class="font-sketch text-lg mb-2">Hoverable Card</h4>
            <p class="text-sketch-gray font-hand">Hover to see the effect!</p>
          <% end %>

          <%= render Sketch::CardComponent.new(variant: :elevated, href: "#", hoverable: true) do %>
            <h4 class="font-sketch text-lg mb-2">Clickable Card</h4>
            <p class="text-sketch-gray font-hand">This card is a link!</p>
          <% end %>
        </div>
      </div>

      <%# Card with Image %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Card with Image</h3>
        <div class="max-w-sm">
          <%= render Sketch::CardComponent.new(variant: :default) do |card| %>
            <% card.with_image(src: "https://placehold.co/400x300/FFE4B5/1A1A1A?text=Photo", alt: "Sample photo") %>
            <h4 class="font-sketch text-lg mb-2">Photo Card</h4>
            <p class="text-sketch-gray font-hand text-sm">A card with an image slot.</p>
          <% end %>
        </div>
      </div>

      <%# Gallery Card (Bento Grid) %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Gallery Card (Bento Grid)</h3>
        <div class="max-w-lg">
          <%= render Sketch::GalleryCardComponent.new(aspect_ratio: :portrait, hoverable: true) do |card| %>
            <% card.with_main_image(src: "https://placehold.co/400x400/E8D5B7/1A1A1A?text=Photo+1", alt: "Main photo") %>
            <% card.with_secondary_image(src: "https://placehold.co/200x200/D4E5F7/1A1A1A?text=Photo+2", alt: "Second photo") %>
            <% card.with_tertiary_image(src: "https://placehold.co/200x200/F7E4D4/1A1A1A?text=Photo+3", alt: "Third photo", more_count: 12) %>
            <h4 class="font-sketch text-lg mb-1">ìš°ë¦¬ ê°€ì¡± ì•¨ë²”</h4>
            <p class="text-sketch-gray font-hand text-sm">ì†Œì¤‘í•œ ìˆœê°„ë“¤ì„ ëª¨ì•„ë´¤ì–´ìš” âœ¨</p>
          <% end %>
        </div>
      </div>

      <%# Gallery Card - Square Aspect %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Gallery Card - Square</h3>
        <div class="max-w-md">
          <%= render Sketch::GalleryCardComponent.new(aspect_ratio: :square, hoverable: true) do |card| %>
            <% card.with_main_image(src: "https://placehold.co/300x300/FFD4E5/1A1A1A?text=Photo+1", alt: "Main") %>
            <% card.with_secondary_image(src: "https://placehold.co/150x150/E5FFD4/1A1A1A?text=Photo+2", alt: "Top") %>
            <% card.with_tertiary_image(src: "https://placehold.co/150x150/D4E5FF/1A1A1A?text=Photo+3", alt: "Bottom", more_text: "ë”ë³´ê¸°") %>
            <p class="text-sketch-ink font-hand">ì²« ëŒ íŒŒí‹° ì‚¬ì§„ ëª¨ìŒ</p>
          <% end %>
        </div>
      </div>
    </section>

    <%# ==================== INPUTS ==================== %>
    <section id="inputs" class="space-y-6">
      <h2 class="font-sketch text-3xl text-sketch-ink border-b-2 border-dashed border-sketch-ink/30 pb-2">
        Form Inputs
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
        <%# Text Input %>
        <div class="space-y-4">
          <h3 class="font-hand text-xl text-sketch-gray">Text Inputs</h3>

          <%= render Sketch::InputComponent.new(
            type: :text,
            name: "demo_text",
            label: "Your Name",
            placeholder: "Enter your name...",
            helper: "This is helper text"
          ) %>

          <%= render Sketch::InputComponent.new(
            type: :email,
            name: "demo_email",
            label: "Email Address",
            placeholder: "you@example.com",
            required: true
          ) %>

          <%= render Sketch::InputComponent.new(
            type: :password,
            name: "demo_password",
            label: "Password",
            placeholder: "********"
          ) %>
        </div>

        <%# Input States %>
        <div class="space-y-4">
          <h3 class="font-hand text-xl text-sketch-gray">Input States</h3>

          <%= render Sketch::InputComponent.new(
            type: :text,
            name: "demo_error",
            label: "With Error",
            placeholder: "Invalid input",
            error: "This field has an error!"
          ) %>

          <%= render Sketch::InputComponent.new(
            type: :text,
            name: "demo_disabled",
            label: "Disabled",
            placeholder: "Cannot edit",
            disabled: true
          ) %>

          <%= render Sketch::InputComponent.new(
            type: :text,
            name: "demo_readonly",
            label: "Read Only",
            value: "Read-only value",
            readonly: true
          ) %>
        </div>

        <%# Textarea %>
        <div class="space-y-4">
          <h3 class="font-hand text-xl text-sketch-gray">Textarea</h3>

          <%= render Sketch::InputComponent.new(
            type: :textarea,
            name: "demo_textarea",
            label: "Message",
            placeholder: "Write your message here...",
            rows: 4
          ) %>
        </div>

        <%# Select %>
        <div class="space-y-4">
          <h3 class="font-hand text-xl text-sketch-gray">Select</h3>

          <%= render Sketch::InputComponent.new(
            type: :select,
            name: "demo_select",
            label: "Choose an option",
            options: [
              ["Option 1", "1"],
              ["Option 2", "2"],
              ["Option 3", "3"]
            ],
            include_blank: "Select..."
          ) %>
        </div>

        <%# Variants %>
        <div class="space-y-4 md:col-span-2">
          <h3 class="font-hand text-xl text-sketch-gray">Input Variants</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <%= render Sketch::InputComponent.new(
              type: :text,
              name: "variant_default",
              label: "Default",
              variant: :default,
              placeholder: "Default style"
            ) %>

            <%= render Sketch::InputComponent.new(
              type: :text,
              name: "variant_filled",
              label: "Filled",
              variant: :filled,
              placeholder: "Filled style"
            ) %>

            <%= render Sketch::InputComponent.new(
              type: :text,
              name: "variant_underline",
              label: "Underline",
              variant: :underline,
              placeholder: "Underline style"
            ) %>
          </div>
        </div>
      </div>
    </section>

    <%# ==================== NAVIGATION ==================== %>
    <section id="navigation" class="space-y-6">
      <h2 class="font-sketch text-3xl text-sketch-ink border-b-2 border-dashed border-sketch-ink/30 pb-2">
        Navigation
      </h2>

      <%# Header Nav %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Header Navigation</h3>
        <%= render Sketch::NavComponent.new(variant: :header) do |nav| %>
          <% nav.with_brand do %>
            <span class="font-sketch text-xl">âœï¸ Moabom</span>
          <% end %>
          <% nav.with_item(href: "#", active: true) do %>Home<% end %>
          <% nav.with_item(href: "#") do %>Photos<% end %>
          <% nav.with_item(href: "#") do %>Albums<% end %>
          <% nav.with_actions do %>
            <%= render Sketch::ButtonComponent.new(variant: :primary, size: :sm) do %>
              Upload
            <% end %>
          <% end %>
        <% end %>
      </div>

      <%# Inline Nav %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Inline Navigation</h3>
        <%= render Sketch::NavComponent.new(variant: :inline) do |nav| %>
          <% nav.with_item(href: "#", active: true) do %>All<% end %>
          <% nav.with_item(href: "#") do %>Recent<% end %>
          <% nav.with_item(href: "#") do %>Favorites<% end %>
          <% nav.with_item(href: "#") do %>Shared<% end %>
        <% end %>
      </div>

      <%# Tab Bar %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Tab Bar (Mobile)</h3>
        <div class="max-w-md border-2 border-dashed border-sketch-ink/20 rounded-lg overflow-hidden">
          <%= render Sketch::NavComponent.new(variant: :tabbar) do |nav| %>
            <% nav.with_tab(href: "#", icon: "home", label: "Home", active: true) %>
            <% nav.with_tab(href: "#", icon: "image", label: "Photos") %>
            <% nav.with_tab(href: "#", icon: "plus-circle", label: "Add") %>
            <% nav.with_tab(href: "#", icon: "bell", label: "Alerts") %>
            <% nav.with_tab(href: "#", icon: "settings", label: "Settings") %>
          <% end %>
        </div>
      </div>
    </section>

    <%# ==================== MODALS ==================== %>
    <section id="modals" class="space-y-6">
      <h2 class="font-sketch text-3xl text-sketch-ink border-b-2 border-dashed border-sketch-ink/30 pb-2">
        Modals
      </h2>

      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Modal Sizes</h3>
        <div class="flex flex-wrap gap-4">
          <button
            type="button"
            class="sketch-btn sketch-btn-secondary"
            onclick="openSketchModal('modal-sm')"
          >
            Small Modal
          </button>

          <button
            type="button"
            class="sketch-btn sketch-btn-secondary"
            onclick="openSketchModal('modal-md')"
          >
            Medium Modal
          </button>

          <button
            type="button"
            class="sketch-btn sketch-btn-secondary"
            onclick="openSketchModal('modal-lg')"
          >
            Large Modal
          </button>
        </div>
      </div>

      <%# Modal Components (hidden by default) %>
      <%= render Sketch::ModalComponent.new(id: "modal-sm", size: :sm, title: "Small Modal") do |modal| %>
        <% modal.with_body do %>
          <p class="font-hand text-sketch-gray">This is a small modal dialog.</p>
        <% end %>
        <% modal.with_footer do %>
          <%= render Sketch::ButtonComponent.new(variant: :ghost, data: { action: "click->sketch-modal#close" }) do %>
            Cancel
          <% end %>
          <%= render Sketch::ButtonComponent.new(variant: :primary) do %>
            Confirm
          <% end %>
        <% end %>
      <% end %>

      <%= render Sketch::ModalComponent.new(id: "modal-md", size: :md, title: "Medium Modal") do |modal| %>
        <% modal.with_body do %>
          <p class="font-hand text-sketch-gray mb-4">
            This is a medium-sized modal with more content space.
          </p>
          <%= render Sketch::InputComponent.new(
            type: :text,
            name: "modal_input",
            label: "Enter something",
            placeholder: "Type here..."
          ) %>
        <% end %>
        <% modal.with_footer do %>
          <%= render Sketch::ButtonComponent.new(variant: :ghost, data: { action: "click->sketch-modal#close" }) do %>
            Cancel
          <% end %>
          <%= render Sketch::ButtonComponent.new(variant: :primary) do %>
            Save
          <% end %>
        <% end %>
      <% end %>

      <%= render Sketch::ModalComponent.new(id: "modal-lg", size: :lg, title: "Large Modal") do |modal| %>
        <% modal.with_body do %>
          <p class="font-hand text-sketch-gray mb-4">
            This is a large modal that can contain more complex content.
          </p>
          <div class="grid grid-cols-2 gap-4">
            <div class="h-32 bg-sketch-highlight-blue/30 rounded-lg flex items-center justify-center">
              <span class="font-sketch text-sketch-ink/50">Content Area 1</span>
            </div>
            <div class="h-32 bg-sketch-highlight-pink/30 rounded-lg flex items-center justify-center">
              <span class="font-sketch text-sketch-ink/50">Content Area 2</span>
            </div>
          </div>
        <% end %>
        <% modal.with_footer do %>
          <%= render Sketch::ButtonComponent.new(variant: :danger, data: { action: "click->sketch-modal#close" }) do %>
            Delete
          <% end %>
          <div class="flex-1"></div>
          <%= render Sketch::ButtonComponent.new(variant: :ghost, data: { action: "click->sketch-modal#close" }) do %>
            Cancel
          <% end %>
          <%= render Sketch::ButtonComponent.new(variant: :primary) do %>
            Save Changes
          <% end %>
        <% end %>
      <% end %>
    </section>

    <%# ==================== UTILITIES ==================== %>
    <section id="utilities" class="space-y-6">
      <h2 class="font-sketch text-3xl text-sketch-ink border-b-2 border-dashed border-sketch-ink/30 pb-2">
        Utility Classes
      </h2>

      <%# Shadows %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Rough Shadows</h3>
        <div class="flex flex-wrap gap-8">
          <div class="w-32 h-32 bg-white rounded-lg rough-shadow-sm flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray">small</span>
          </div>
          <div class="w-32 h-32 bg-white rounded-lg rough-shadow flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray">default</span>
          </div>
          <div class="w-32 h-32 bg-white rounded-lg rough-shadow-lg flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray">large</span>
          </div>
        </div>
      </div>

      <%# Noise Fill %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Noise Fill</h3>
        <div class="flex flex-wrap gap-8">
          <div class="w-32 h-32 bg-sketch-highlight-yellow noise-fill-light rounded-lg flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray relative z-10">light</span>
          </div>
          <div class="w-32 h-32 bg-sketch-highlight-pink noise-fill rounded-lg flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray relative z-10">default</span>
          </div>
          <div class="w-32 h-32 bg-sketch-highlight-blue noise-fill-heavy rounded-lg flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray relative z-10">heavy</span>
          </div>
        </div>
      </div>

      <%# Borders %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Irregular Borders</h3>
        <div class="flex flex-wrap gap-8">
          <div class="w-32 h-32 bg-white irregular-border-thin rounded-lg flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray">thin</span>
          </div>
          <div class="w-32 h-32 bg-white irregular-border rounded-lg flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray">default</span>
          </div>
          <div class="w-32 h-32 bg-white irregular-border-thick rounded-lg flex items-center justify-center">
            <span class="font-hand text-sm text-sketch-gray">thick</span>
          </div>
        </div>
      </div>

      <%# Text Effects %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Text Effects</h3>
        <div class="space-y-4 max-w-md">
          <p class="text-lg">
            This text has a <span class="sketch-underline">sketch underline</span> effect.
          </p>
          <p class="text-lg">
            This text has a <span class="sketch-strikethrough">strikethrough</span> effect.
          </p>
          <p class="text-lg">
            This text has a <span class="sketch-highlight">yellow highlight</span> effect.
          </p>
          <p class="text-lg">
            Try <span class="sketch-highlight-pink">pink</span>,
            <span class="sketch-highlight-blue">blue</span>, or
            <span class="sketch-highlight-green">green</span> highlights!
          </p>
        </div>
      </div>

      <%# Animations %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Animations</h3>
        <div class="flex flex-wrap gap-8">
          <div class="w-24 h-24 bg-sketch-highlight-yellow rounded-lg sketch-wobble flex items-center justify-center">
            <span class="font-hand text-xs text-sketch-gray">wobble</span>
          </div>
          <div class="w-24 h-24 bg-sketch-highlight-pink rounded-lg sketch-shake flex items-center justify-center">
            <span class="font-hand text-xs text-sketch-gray">shake (hover)</span>
          </div>
          <div class="w-24 h-24 bg-sketch-highlight-blue rounded-lg sketch-loading flex items-center justify-center">
            <span class="font-hand text-xs text-sketch-gray">loading</span>
          </div>
        </div>
      </div>

      <%# Background Patterns %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Background Patterns</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="h-40 sketch-dotted-bg rounded-lg flex items-center justify-center">
            <span class="font-hand text-sketch-gray bg-white px-2">dotted</span>
          </div>
          <div class="h-40 sketch-lined-bg rounded-lg flex items-center justify-center">
            <span class="font-hand text-sketch-gray bg-white px-2">lined</span>
          </div>
          <div class="h-40 sketch-crosshatch rounded-lg flex items-center justify-center">
            <span class="font-hand text-sketch-gray bg-white px-2">crosshatch</span>
          </div>
        </div>
      </div>

      <%# Paper Effects %>
      <div class="space-y-4">
        <h3 class="font-hand text-xl text-sketch-gray">Paper Effects</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="h-40 bg-white sketch-paper-texture rounded-lg flex items-center justify-center">
            <span class="font-hand text-sketch-gray relative z-10">paper texture</span>
          </div>
          <div class="h-40 bg-sketch-highlight-yellow sketch-torn-edge flex items-center justify-center">
            <span class="font-hand text-sketch-gray">torn edge</span>
          </div>
        </div>
      </div>
    </section>

    <%# ==================== NEW COMPONENTS ==================== %>
    <section id="new-components" class="space-y-6">
      <h2 class="font-sketch text-3xl text-sketch-ink border-b-2 border-dashed border-sketch-ink/30 pb-2">
        New Components (ViewComponent)
      </h2>

