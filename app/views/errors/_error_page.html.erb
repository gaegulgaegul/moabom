<%# Frame0 Sketch Design System - Error Page %>
<div class="min-h-screen bg-sketch-paper flex flex-col items-center justify-center px-6">
  <%= render Sketch::AvatarComponent.new(size: :xl, border: true, class: "mb-6 #{icon_bg_class}") do %>
    <%= lucide_icon icon_name, class: "w-12 h-12 #{icon_color_class}" %>
  <% end %>

  <h1 class="text-2xl font-sketch font-bold text-sketch-ink mb-2"><%= title %></h1>

  <p class="font-hand text-sketch-gray text-center mb-8">
    <%= description.html_safe %>
  </p>

  <%= button_to root_path, method: :get do %>
    <%= render Sketch::ButtonComponent.new(variant: :primary, size: :lg, type: :submit) do %>
      <%= lucide_icon "home", class: "w-5 h-5 mr-2 inline" %>
      홈으로 돌아가기
    <% end %>
  <% end %>
</div>
