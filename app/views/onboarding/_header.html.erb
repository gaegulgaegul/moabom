<div class="onboarding-header flex items-center justify-between px-4 h-14 bg-sketch-paper border-b-2 border-sketch-ink">
  <button onclick="history.back()" class="p-2 hover:bg-sketch-cream rounded-full transition-colors">
    <%= lucide_icon "arrow-left", class: "w-6 h-6 text-sketch-ink" %>
  </button>
  <span class="text-lg font-sketch font-bold text-sketch-ink">모아봄</span>
  <div class="flex gap-1">
    <% 3.times do |i| %>
      <span class="w-2 h-2 rounded-full border border-sketch-ink <%= i == step - 1 ? 'bg-sketch-ink' : 'bg-sketch-cream' %>"></span>
    <% end %>
  </div>
</div>
