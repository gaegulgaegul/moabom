<nav class="fixed bottom-0 left-0 right-0 z-50
            bg-sketch-paper/90 backdrop-blur-md
            border-t-2 border-sketch-ink
            safe-area-inset-bottom"
     role="navigation"
     aria-label="Tab">
  <div class="flex items-center justify-around h-16">
    <%# 홈 %>
    <%= link_to root_path,
                class: "flex flex-col items-center justify-center py-2 px-4 transition-colors duration-200 #{current_page?(root_path) ? 'text-sketch-ink' : 'text-sketch-gray hover:text-sketch-ink'}",
                "aria-current": current_page?(root_path) ? "page" : nil do %>
      <%= lucide_icon "home", class: "w-6 h-6" %>
      <span class="text-xs mt-1 font-sketch">홈</span>
    <% end %>

    <%# 앨범 %>
    <%= link_to "#",
                class: "flex flex-col items-center justify-center py-2 px-4 transition-colors duration-200 text-sketch-gray hover:text-sketch-ink" do %>
      <%= lucide_icon "image", class: "w-6 h-6" %>
      <span class="text-xs mt-1 font-sketch">앨범</span>
    <% end %>

    <%# 업로드 (FAB) %>
    <% if current_family %>
      <%= link_to new_family_photo_path(current_family),
                  class: "flex items-center justify-center -mt-4 tap-highlight-none",
                  "aria-label": "사진 업로드" do %>
        <div class="w-14 h-14 bg-sketch-ink rounded-full flex items-center justify-center
                    shadow-lg border-2 border-sketch-ink
                    hover:bg-sketch-gray active:scale-95
                    transition-all duration-200">
          <%= lucide_icon "plus", class: "w-7 h-7 text-sketch-paper" %>
        </div>
      <% end %>
    <% else %>
      <div class="flex items-center justify-center -mt-4">
        <div class="w-14 h-14 bg-sketch-gray/50 rounded-full flex items-center justify-center
                    shadow-lg border-2 border-sketch-gray opacity-50 cursor-not-allowed">
          <%= lucide_icon "plus", class: "w-7 h-7 text-sketch-paper" %>
        </div>
      </div>
    <% end %>

    <%# 알림 %>
    <%= link_to notifications_path,
                class: "flex flex-col items-center justify-center py-2 px-4 transition-colors duration-200 #{current_page?(notifications_path) ? 'text-sketch-ink' : 'text-sketch-gray hover:text-sketch-ink'}",
                "aria-current": current_page?(notifications_path) ? "page" : nil do %>
      <%= lucide_icon "bell", class: "w-6 h-6" %>
      <span class="text-xs mt-1 font-sketch">알림</span>
    <% end %>

    <%# 설정 %>
    <%= link_to settings_profile_path,
                class: "flex flex-col items-center justify-center py-2 px-4 transition-colors duration-200 #{current_page?(settings_profile_path) ? 'text-sketch-ink' : 'text-sketch-gray hover:text-sketch-ink'}",
                "aria-current": current_page?(settings_profile_path) ? "page" : nil do %>
      <%= lucide_icon "settings", class: "w-6 h-6" %>
      <span class="text-xs mt-1 font-sketch">설정</span>
    <% end %>
  </div>
</nav>
