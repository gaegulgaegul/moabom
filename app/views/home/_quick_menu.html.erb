<%# Frame0 Sketch Design System - Quick Menu %>
<section>
  <h2 class="text-lg font-sketch font-semibold text-sketch-ink mb-3">빠른 메뉴</h2>
  <div class="grid grid-cols-2 gap-3">
    <%= link_to new_family_photo_path(family), class: "tap-highlight-none" do %>
      <%= render Sketch::CardComponent.new(variant: :flat, padding: :lg, hoverable: true, clickable: true) do %>
        <div class="flex flex-col items-center justify-center">
          <%= lucide_icon "camera", class: "w-8 h-8 text-sketch-ink mb-2" %>
          <span class="text-sm font-sketch font-medium text-sketch-ink">사진 업로드</span>
        </div>
      <% end %>
    <% end %>

    <%= link_to family_members_path(family), class: "tap-highlight-none" do %>
      <%= render Sketch::CardComponent.new(variant: :flat, padding: :lg, hoverable: true, clickable: true) do %>
        <div class="flex flex-col items-center justify-center">
          <%= lucide_icon "users", class: "w-8 h-8 text-sketch-ink mb-2" %>
          <span class="text-sm font-sketch font-medium text-sketch-ink">가족 관리</span>
        </div>
      <% end %>
    <% end %>

    <%= link_to family_photos_path(family), class: "tap-highlight-none" do %>
      <%= render Sketch::CardComponent.new(variant: :flat, padding: :lg, hoverable: true, clickable: true) do %>
        <div class="flex flex-col items-center justify-center">
          <%= lucide_icon "calendar", class: "w-8 h-8 text-sketch-ink mb-2" %>
          <span class="text-sm font-sketch font-medium text-sketch-ink">앨범 보기</span>
        </div>
      <% end %>
    <% end %>

    <%= link_to family_children_path(family), class: "tap-highlight-none" do %>
      <%= render Sketch::CardComponent.new(variant: :flat, padding: :lg, hoverable: true, clickable: true) do %>
        <div class="flex flex-col items-center justify-center">
          <%= lucide_icon "smile", class: "w-8 h-8 text-sketch-ink mb-2" %>
          <span class="text-sm font-sketch font-medium text-sketch-ink">아이 프로필</span>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
