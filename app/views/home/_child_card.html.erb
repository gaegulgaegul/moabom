<%# Frame0 Sketch Design System - Child Card %>
<% if child.present? %>
  <%= render Sketch::CardComponent.new(variant: :default, padding: :md) do %>
    <div class="flex items-center gap-4">
      <%= render Sketch::AvatarComponent.new(size: :lg, border: true) do %>
        <%= lucide_icon "smile", class: "w-8 h-8 text-sketch-ink" %>
      <% end %>
      <div class="flex-1">
        <p class="font-sketch font-semibold text-sketch-ink">
          <%= child.name %>의 D+<%= child.days_since_birth %>
        </p>
        <p class="text-sm font-hand text-sketch-gray">오늘도 예쁜 하루 보내세요</p>
      </div>
    </div>
  <% end %>
<% end %>
