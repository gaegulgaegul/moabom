<%# Frame0 Sketch Design System - Family Settings %>
<%= render Sketch::ContainerComponent.new(padding: :lg, variant: :paper) do %>
  <h1 class="text-2xl font-sketch font-bold text-sketch-ink mb-6"><%= @family.name %></h1>

  <%= form_with model: @family, class: "space-y-6" do |f| %>
    <% if @family.errors.any? %>
      <%= render Sketch::AlertComponent.new(variant: :error, dismissible: false) do %>
        <% @family.errors.full_messages.each do |message| %>
          <p class="text-sm"><%= message %></p>
        <% end %>
      <% end %>
    <% end %>

    <%= render Sketch::InputComponent.new(
      name: "family[name]",
      label: "가족 이름",
      value: @family.name,
      required: true
    ) %>

    <div class="flex gap-3 pt-4">
      <%= render Sketch::ButtonComponent.new(variant: :primary, type: :submit, full_width: true) do %>
        저장
      <% end %>
    </div>
  <% end %>
<% end %>
