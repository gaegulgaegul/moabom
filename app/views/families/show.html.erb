<div class="family-page">
  <h1><%= @family.name %></h1>

  <%= form_with model: @family, class: "family-form" do |f| %>
    <% if @family.errors.any? %>
      <div class="errors">
        <% @family.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "가족 이름" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <%= f.submit "저장", class: "btn btn-primary" %>
  <% end %>
</div>
