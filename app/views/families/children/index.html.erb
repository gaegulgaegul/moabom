<div class="children-page">
  <h1><%= @family.name %> 아이들</h1>

  <% if can_manage_members? %>
    <%= link_to "아이 추가", new_family_child_path(@family), class: "btn btn-primary" %>
  <% end %>

  <div class="children-list">
    <% @children.each do |child| %>
      <div class="child">
        <div class="child-info">
          <span class="child-name"><%= child.name %></span>
          <span class="child-age"><%= child.age_string %></span>
          <span class="child-gender"><%= child.gender == "male" ? "남" : "여" %></span>
        </div>

        <% if can_manage_members? %>
          <div class="child-actions">
            <%= link_to "수정", edit_family_child_path(@family, child), class: "btn btn-secondary" %>
            <%= button_to "삭제", family_child_path(@family, child),
                          method: :delete,
                          data: { turbo_confirm: "정말 삭제하시겠습니까?" },
                          class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
