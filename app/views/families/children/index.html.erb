<%# Frame0 Sketch Design System - Children List %>
<%= render Sketch::ContainerComponent.new(padding: :md, variant: :paper) do %>
  <h1 class="text-xl font-sketch font-bold text-sketch-ink mb-6">우리 아이들</h1>

  <% if @children.any? %>
    <div class="space-y-4 mb-6">
      <% @children.each do |child| %>
        <%= turbo_frame_tag dom_id(child) do %>
          <%= render "families/children/child", child: child, family: @family %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%= render Sketch::EmptyStateComponent.new(
      icon: "smile",
      title: "등록된 아이가 없어요",
      description: "아이를 등록하고 성장 기록을 시작하세요",
      size: :sm,
      class: "mb-6"
    ) %>
  <% end %>

  <!-- 아이 추가 버튼 -->
  <% if can_manage_members? %>
    <%= button_to new_family_child_path(@family), method: :get do %>
      <%= render Sketch::ButtonComponent.new(variant: :secondary, full_width: true, type: :submit) do %>
        <%= lucide_icon "plus", class: "w-5 h-5 mr-2 inline" %>
        아이 추가하기
      <% end %>
    <% end %>
  <% end %>
<% end %>
