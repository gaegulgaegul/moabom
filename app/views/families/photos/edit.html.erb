<%# Frame0 Sketch Design System - Photo Edit %>
<%= render Sketch::ContainerComponent.new(padding: :lg, variant: :paper) do %>
  <% if @family && @photo %>
    <div class="mb-4">
      <%= link_to family_photo_path(@family, @photo), class: "font-hand text-sketch-gray hover:text-sketch-ink inline-flex items-center gap-1" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4" %>
        사진으로
      <% end %>
    </div>
  <% end %>

  <h1 class="text-2xl font-sketch font-bold text-sketch-ink mb-6">사진 수정</h1>

  <%= render partial: "form", locals: { photo: @photo } %>
<% end %>
