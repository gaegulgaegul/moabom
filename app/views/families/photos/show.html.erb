<div class="container mx-auto px-4 py-8">
  <div class="mb-4">
    <%= link_to "← 타임라인으로", family_photos_path(@family), class: "text-blue-600" %>
  </div>

  <div class="max-w-2xl mx-auto">
    <% if @photo.image.attached? %>
      <%= image_tag @photo.image, class: "w-full rounded-lg shadow", alt: @photo.caption %>
    <% end %>

    <div class="mt-4">
      <% if @photo.caption.present? %>
        <p class="text-lg"><%= @photo.caption %></p>
      <% end %>

      <div class="mt-2 text-sm text-gray-500">
        <p>촬영: <%= l(@photo.taken_at, format: :long) if @photo.taken_at %></p>
        <p>업로드: <%= @photo.uploader.nickname %></p>
        <% if @photo.child %>
          <p>아이: <%= @photo.child.name %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
