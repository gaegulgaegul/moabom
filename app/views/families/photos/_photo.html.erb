<%# Frame0 Sketch Design System - Photo Card %>
<%= turbo_frame_tag dom_id(photo) do %>
  <%= render Sketch::CardComponent.new(variant: :default, padding: :none, hoverable: true, clickable: true) do %>
    <%= link_to family_photo_path(photo.family, photo) do %>
      <% if photo.image.attached? %>
        <%= image_tag photo.image, class: "w-full h-48 object-cover", loading: "lazy", alt: photo.caption %>
      <% else %>
        <div class="w-full h-48 bg-sketch-cream flex items-center justify-center">
          <span class="font-hand text-sketch-gray">이미지 없음</span>
        </div>
      <% end %>
    <% end %>
    <div class="p-3">
      <% if photo.caption.present? %>
        <p class="text-sm font-hand text-sketch-ink truncate"><%= photo.caption %></p>
      <% end %>
      <p class="text-xs font-hand text-sketch-gray mt-1"><%= l(photo.taken_at, format: :short) if photo.taken_at %></p>
    </div>
  <% end %>
<% end %>
