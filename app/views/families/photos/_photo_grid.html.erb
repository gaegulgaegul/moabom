<%# Frame0 Sketch Design System - Photo Grid %>
<%# locals: photos, family %>
<div class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-1">
  <% photos.each do |photo| %>
    <%= link_to family_photo_path(family, photo),
        class: "aspect-square overflow-hidden rounded-lg border-2 border-sketch-gray
                hover:border-sketch-ink hover:shadow-lg transition-all" do %>
      <% if photo.image.attached? %>
        <%= image_tag photo.image.variant(:thumbnail),
            class: "w-full h-full object-cover",
            loading: "lazy",
            alt: photo.caption || "사진" %>
      <% else %>
        <div class="w-full h-full bg-sketch-cream flex items-center justify-center">
          <%= lucide_icon "image", class: "w-8 h-8 text-sketch-gray" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
