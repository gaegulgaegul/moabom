<%= form_with model: [@family, photo], class: "space-y-4 max-w-lg" do |form| %>
  <% if photo.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded p-4">
      <h2 class="text-red-800 font-medium"><%= pluralize(photo.errors.count, "오류") %>가 있습니다:</h2>
      <ul class="list-disc list-inside text-red-700 text-sm mt-2">
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless photo.persisted? %>
    <div>
      <%= form.label :image, "사진", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :image, accept: "image/jpeg,image/png,image/heic,image/webp",
          class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100",
          direct_upload: true %>
    </div>
  <% end %>

  <div>
    <%= form.label :caption, "설명", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :caption, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :taken_at, "촬영일", class: "block text-sm font-medium text-gray-700" %>
    <%= form.datetime_local_field :taken_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :child_id, "아이", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :child_id, @family.children, :id, :name,
        { include_blank: "선택 안함" },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit photo.persisted? ? "수정하기" : "업로드", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>
