<%# Frame0 Sketch Design System - Photo Form %>
<%= form_with model: [@family, photo], id: "photo_form", class: "px-4 py-6 space-y-6" do |form| %>
  <% if photo.errors.any? %>
    <%= render Sketch::AlertComponent.new(variant: :error, dismissible: false) do %>
      <% photo.errors.full_messages.each do |message| %>
        <p class="text-sm"><%= message %></p>
      <% end %>
    <% end %>
  <% end %>

  <!-- 미리보기 -->
  <div class="aspect-square bg-sketch-cream rounded-2xl overflow-hidden flex items-center justify-center border-2 border-dashed border-sketch-gray"
       data-controller="image-preview">
    <div class="text-center" data-image-preview-target="placeholder">
      <%= lucide_icon "image", class: "w-16 h-16 text-sketch-gray mx-auto mb-2" %>
      <p class="text-sm font-hand text-sketch-gray">사진을 선택해주세요</p>
    </div>
    <img class="w-full h-full object-cover hidden" data-image-preview-target="preview">
  </div>

  <!-- 파일 선택 -->
  <div class="flex gap-2 overflow-x-auto scrollbar-hide">
    <label class="shrink-0 w-16 h-16 bg-sketch-cream rounded-xl flex items-center justify-center
                  cursor-pointer border-2 border-dashed border-sketch-gray
                  hover:border-sketch-ink transition-colors">
      <%= lucide_icon "plus", class: "w-6 h-6 text-sketch-gray" %>
      <%= form.file_field :image, accept: "image/*", class: "hidden",
          data: { action: "change->image-preview#preview" } %>
    </label>
  </div>

  <!-- 캡션 -->
  <%= render Sketch::InputComponent.new(
    name: "photo[caption]",
    type: :textarea,
    placeholder: "이 순간에 대해 적어보세요...",
    rows: 3,
    value: photo.caption
  ) %>

  <!-- 아이 태그 -->
  <div data-controller="child-tag">
    <label id="child-tag-label" class="block text-sm font-sketch font-medium text-sketch-ink mb-2">아이 태그</label>
    <div class="flex gap-2 flex-wrap" role="radiogroup" aria-labelledby="child-tag-label">
      <button type="button"
              class="px-4 py-2 rounded-xl border-2 text-sm font-sketch font-medium
                     border-sketch-ink bg-sketch-ink text-sketch-paper"
              role="radio"
              aria-checked="true"
              data-child-id=""
              data-child-tag-target="button"
              data-action="click->child-tag#select keydown->child-tag#handleKeydown">
        전체
      </button>
      <% @family.children.each do |child| %>
        <button type="button"
                class="px-4 py-2 rounded-xl border-2 text-sm font-sketch font-medium
                       border-sketch-gray bg-sketch-cream text-sketch-gray"
                role="radio"
                aria-checked="false"
                data-child-id="<%= child.id %>"
                data-child-tag-target="button"
                data-action="click->child-tag#select keydown->child-tag#handleKeydown">
          <%= child.name %>
        </button>
      <% end %>
    </div>
    <%= form.hidden_field :child_id, data: { child_tag_target: "input" } %>
  </div>

  <!-- 촬영일 -->
  <%= render Sketch::InputComponent.new(
    name: "photo[taken_at]",
    type: :date,
    label: "촬영일",
    value: photo.taken_at || Date.today
  ) %>
<% end %>
