<div class="px-4 py-6 space-y-6">
  <h1 class="text-xl font-bold text-warm-gray-800"><%= t('.title') %></h1>

  <!-- 계정 설정 -->
  <div class="card-solid divide-y divide-warm-gray-100">
    <%= render "settings/setting_item", icon: "user-circle", title: "프로필 설정", url: "#" %>

    <%= render "settings/setting_item", icon: "bell", title: "알림 설정", url: settings_notifications_path %>

    <%= render "settings/setting_item", icon: "moon", title: "다크 모드" do %>
      <button class="w-12 h-7 bg-warm-gray-200 rounded-full relative transition-colors"
              data-controller="toggle"
              data-action="click->toggle#toggle">
        <span class="absolute left-1 top-1 w-5 h-5 bg-white rounded-full shadow transition-transform"
              data-toggle-target="knob"></span>
      </button>
    <% end %>
  </div>

  <!-- 프로필 수정 폼 -->
  <div class="card-solid">
    <h2 class="text-lg font-semibold text-warm-gray-800 mb-4">프로필 정보</h2>

    <%= form_with model: current_user, url: settings_profile_path, method: :patch, class: "space-y-4" do |form| %>
      <% if current_user.errors.any? %>
        <div class="alert-error">
          <% current_user.errors.full_messages.each do |message| %>
            <p class="text-sm"><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-medium text-warm-gray-700 mb-2"><%= User.human_attribute_name(:email) %></label>
        <%= form.email_field :email, disabled: true, class: "input-text bg-warm-gray-100 cursor-not-allowed" %>
        <p class="text-xs text-warm-gray-400 mt-1"><%= t('.email_help') %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-warm-gray-700 mb-2"><%= User.human_attribute_name(:nickname) %></label>
        <%= form.text_field :nickname, class: "input-text" %>
      </div>

      <%= form.submit t('helpers.submit.save'), class: "btn-primary w-full" %>
    <% end %>
  </div>

  <!-- 정보 -->
  <div class="card-solid divide-y divide-warm-gray-100">
    <%= render "settings/setting_item", icon: "document-text", title: "이용약관", url: "#" %>

    <%= render "settings/setting_item", icon: "shield-check", title: "개인정보 처리방침", url: "#" %>

    <%= render "settings/setting_item", icon: "information-circle", title: "앱 정보", url: "#", value: "v1.0.0" %>
  </div>

  <!-- 로그아웃 -->
  <div class="card-solid">
    <%= button_to logout_path, method: :delete, class: "flex items-center gap-3 py-4 w-full tap-highlight-none" do %>
      <%= heroicon "arrow-right-on-rectangle", variant: :outline, options: { class: "w-6 h-6 text-red-500" } %>
      <span class="text-red-500">로그아웃</span>
    <% end %>
  </div>
</div>
